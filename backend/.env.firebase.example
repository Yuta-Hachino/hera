# ===================================
# Firebase/GCP設定
# ===================================

# Firebase Admin SDK サービスアカウントキー（JSON ファイルのパス）
# 取得方法: Firebase Console > プロジェクト設定 > サービスアカウント > 新しい秘密鍵を生成
FIREBASE_SERVICE_ACCOUNT_PATH=./service-account-key.json

# GCPプロジェクトID
# 取得方法: Firebase Console > プロジェクト設定 > 全般
GCP_PROJECT_ID=test-6554c

# Cloud Storage バケット名
# 取得方法: Firebase Console > Storage > バケット名をコピー
GCS_BUCKET_NAME=test-6554c.firebasestorage.app

# Firebase Storage バケット（通常はGCS_BUCKET_NAMEと同じ）
FIREBASE_STORAGE_BUCKET=test-6554c.firebasestorage.app

# ===================================
# セッション管理とストレージ設定（本番用）
# ===================================

# セッションタイプ: 'file', 'redis', 'firebase' (デフォルト: 'file')
SESSION_TYPE=firebase

# ストレージモード: 'local', 'gcs', 'firebase' (デフォルト: 'local')
STORAGE_MODE=firebase

# ===================================
# モック設定（テスト用）
# ===================================

# Firebase機能をモック化（true/false）
# trueにすると、Firebase認証情報なしで動作します
FIREBASE_MOCK=false

# ===================================
# Gemini API設定
# ===================================

# Gemini APIキー（必須）
# 取得方法: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-pro

# ===================================
# Flask設定
# ===================================

FLASK_DEBUG=True
PORT=8080
ALLOWED_ORIGINS=http://localhost:3000

# ===================================
# Python設定
# ===================================

# Python path for ADK
PYTHONPATH=/path/to/your/project/backend

# ===================================
# ロギング設定
# ===================================

LOG_LEVEL=INFO